<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgmovie"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/image_poster_desc"
            android:layout_height="256dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtreleasedate"
            android:layout_alignStart="@+id/txtreleasedate"
            android:layout_below="@+id/imgmovie"
            android:text="@string/title"
            android:textSize="21sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/txtreleasedate"
            android:text="@string/_26_maret_2016"
            android:layout_below="@id/txttitle"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="24dp" />
        <ImageView
            android:id="@+id/imgratingmovie"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/image_rate_desc"
            android:layout_below="@id/txttitle"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/txtrate"
            android:text="@string/_5_0"
            android:layout_toLeftOf="@id/imgratingmovie"
            android:layout_below="@id/txttitle"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="24dp" />
        <TextView
            android:padding="10dp"
            android:id="@+id/txtsynopsis"
            android:background="@drawable/background"
            android:layout_below="@id/txtreleasedate"
            android:text="@string/sysnopsis"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>